{
  "manifest_version": 3,
  "name": "nijie-downloader",
  "description": "コンテキストメニューからnijieの画像をダウンロード",
  "version": "2.0.0",
  "author": "tana3n",
  "icons": {
    "32": "icon_32.png"
  },
  "content_scripts": [
    {
      "matches": ["*://nijie.info/view.php?id=*"],
      "js": ["nijie-download.js"]
    }
  ],
  "background": {
    "preferred_environment": [ "document" ],
    "scripts": [ "event_page.js" ],
    "service_worker": "event_page.js",
    "type": "module"
  },
  "permissions": [
    "downloads",
    "storage",
    "tabs",
    "contextMenus"
  ],
  "host_permissions":[
    "*://nijie.info/*",
    "*://pic.nijie.net/"
  ],
  "web_accessible_resources": [
    {
      "resources": ["icon_32.png"],
      "matches": ["https://nijie.info/*"]
    }]
  // "options_ui": {
  //   "page": "settings.html"
  // }
}
